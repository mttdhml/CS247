<!DOCTYPE html> 


<meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1, user-scalable=no">

<head>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-theme.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>

<html> 
    <body> 
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container" >
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header nav-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <!--<span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            -->
            <img class="down-arrow" src="/images/down-arrow.png"></img>
          </button>
          <a href="/"> <img class="nav-logo" src="/images/logo.png"></img></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->

        <div class="collapse navbar-collapse navbar-ex1-collapse">
              <ul class="nav navbar-nav navbar-right"  id="dropdown" >
                {{#if me}}
                <li>
                  <a href="/matches"><i class="fa fa-camera-retro color"></i>&nbsp; Notifications </a>
                </li>
                <li>
                  <a href="/user/{{me}}"><i class="fa fa-camera-retro nav-element"></i>&nbsp; Profile</a>
                </li>
                <li>
                  <a href="/settings"><i class="fa fa-gears nav-element"></i>&nbsp; Settings</a>
                </li>
                <li>
                  <a href="/logout"><i class=""></i>&nbsp; Logout</a>
                </li>
                {{else}}
                <li>
                  <a href="/frontPage"><i class=""></i>&nbsp; Login</a>
                </li>
                {{/if}}
              </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
    <div class="header"> 
        <div class="tab-indicator-a"></div>
        <div class="events-tab" id="active">Events</div>
        <a href="/find-people">
            <div class="people-tab">People</div>
        </a>
        <div class="search">
            <input type="text" class="search-input" placeholder="Find events near you...">
        </div>
    </div>

        <div class="header-margin-search"></div> 
             {{#each events}}
            <a href="/event/{{id}}">
                <div class="event"> 
                    <div class="event-footing"></div>
                    <div class="event-date">{{date}}</div>
                    <div class="event-time">{{time}}</div>
                    <h3 class="event-title"> {{name}} </h3>
                    <div class="event-location">{{location}} </div>
                    <img src="/{{image}}" class="event-bg-image"></img>
                </div>  
            </a>
            {{/each}}




        </div>
    </body>
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>

</html>




