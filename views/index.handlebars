        <div class="events-tab-active">Events</div>
        <div class="people-tab">People</div>
        <h1 class="text-center"> Events Near You </h1>
        <div class="col-lg-6">
            <div class="input-group" id="custom-input">
                <input type="text" class="form-control" placeholder="Search Artists, Venues, and Events">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                    Search</button>
                </span>
            </div>
        </div>
        {{#each events}}
            <div class="event"> 
            <h3 class="text-center"> 
                <a href="/event/{{id}}"> {{name}} </a>
                <img src="/icons/location" class="location-icon"></img> 
                <small class="subtext">{{location}}</small>
            </h3>
            </div>
        {{/each}}
       
        </div>
    </body>
