  <div class="container">
		<div class = "form-group text-center">
			<h1>LOGIN:</h1>
			<form action="/login" enctype="multipart/form-data" method="get">
				<input type="text" class="upload-form form-control" id="user" name="user" placeholder="username"> <br>
				<input type="password" class="upload-form form-control" id="password" name="password" placeholder="password"> <br>
				<input type="submit" class="upload-form form-control" value="SUBMIT" id="login">
			</form>
		</div>	
		<br>
		
		
	</div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
