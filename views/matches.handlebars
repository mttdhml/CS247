<html>
<head>
<title>My Matches</title>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="/stylesheets/style.css">
<meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1, user-scalable=no">
</HEAD>
<BODY BGCOLOR="FFFFFF">
	    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container" >
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header nav-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <!--<span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            -->
            <img class="down-arrow" src="/images/down-arrow.png"></img>
          </button>
          <a href="/"> <img class="nav-logo" src="/images/logo.png"></img></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->

        <div class="collapse navbar-collapse navbar-ex1-collapse">
              <ul class="nav navbar-nav navbar-right"  id="dropdown" >
                {{#if me}}
                <li>
                  <a href="/matches" target="_blank"><i class="fa fa-camera-retro color"></i>&nbsp; Notifications </a>
                </li>
                <li>
                  <a href="/profile/{{me}}" target="_blank"><i class="fa fa-camera-retro nav-element"></i>&nbsp; Profile</a>
                </li>
                <li>
                  <a href="/settings" target="_blank"><i class="fa fa-gears nav-element"></i>&nbsp; Settings</a>
                </li>
                <li>
                  <a href="/logout" target="_blank"><i class=""></i>&nbsp; Logout</a>
                </li>
                {{else}}
                <li>
                  <a href="/frontPage" target="_blank"><i class=""></i>&nbsp; Login</a>
                </li>
                {{/if}}
              </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>

<div class="container">

<div class="row text-center">
 <h2>My Invitations</h2>
</div>
 {{#each users}}
   <a href="/user/{{id}}" class="request" id="{{id}}">
                <div class="invitation" id="{{id}}"> 
                    <div class="event-date">{{name}}</div>
                    <div class="accept-reject"><h2><a href="#" class="accept" id="{{id}}"><span class="glyphicon glyphicon-ok-sign green" aria-hidden="true"></a>&nbsp;</span><a href="#" class="decline" id="1"><span class="glyphicon glyphicon-remove-sign red" aria-hidden="true"></a></h2></span></div>
                    <img src="/{{imageURL}}" class="event-bg-image"></img>
                </div>  
  </a>
  {{/each}}

<div class="row text-center">
 <h2>My Conversations</h2>
</div>
{{#each convos}}
   <a href="/chat/{{id}}">
                <div class="chat-selector"> 
                   <div class="chat-selector-background"></div>
                    <h3 class="chat-selector-title"> {{name}}</h3>
                    <div class="event-location"></div>
                    <img src="/{{imageURL}}" class="event-bg-image"></img>
                </div>  
  </a>
{{/each}}



</div>


 



</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<script src="/javascripts/matches.js"></script>
</BODY>
</HTML>



